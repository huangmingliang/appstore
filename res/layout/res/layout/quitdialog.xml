<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"  android:layout_height="wrap_content" android:gravity="center_horizontal" android:background="#edeffb" android:layout_width="fill_parent">

    <LinearLayout android:id="@+id/linearLayout3" android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="@color/black">
        <TextView android:textColor="@color/white"  android:id="@+id/textView1" android:layout_height="wrap_content" android:textStyle="bold" android:text="系统退出" android:textSize="22dip" android:layout_width="fill_parent" android:gravity="center"></TextView>
       
    </LinearLayout>
    <TextView android:textSize="16dip" android:layout_marginTop="10dip" android:id="@+id/textView2" android:layout_height="wrap_content" android:text="您确定要退出系统吗?" android:textColor="@color/black" android:layout_width="fill_parent" android:gravity="center"></TextView>
    
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_marginLeft="20dip" android:layout_marginRight="20dip" android:layout_marginTop="10dip">
    <Button android:layout_height="wrap_content" android:layout_width="120dip" android:text="确定" android:textColor="@color/black" android:textSize="20dip" android:id="@+id/okButton"></Button>
    <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"></TextView>
    <Button android:layout_height="wrap_content" android:layout_width="120dip" android:text="取消" android:textColor="@color/black" android:textSize="20dip" android:id="@+id/cancelButton"></Button>
    
    </LinearLayout>
    
</LinearLayout>