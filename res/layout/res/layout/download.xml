      <ImageView android:id="@+id/imageView7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/lnew_shufengexian" android:layout_marginLeft="10dip" android:layout_marginTop="12dip"></ImageView>
