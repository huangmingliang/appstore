         		<TextView android:id="@+id/textNameView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/black" android:ellipsize="end" android:singleLine="true" android:textSize="13dip"></TextView>
         		
     	    <LinearLayout android:id="@+id/linearLayout2_1" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="15dip">
