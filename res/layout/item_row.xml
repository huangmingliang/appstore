<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >

    <com.zyitong.AppStore.ui.RemoteImageView
        android:id="@+id/iconView"
        android:layout_width="58dip"
        android:layout_height="58dip"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip" 
        >
    </com.zyitong.AppStore.ui.RemoteImageView>

    <LinearLayout
        android:id="@+id/RowLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="应用名称"
            android:textColor="@color/black"
            android:textSize="15sp" >
        </TextView>

        <TextView
            android:id="@+id/textFileSizeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:singleLine="true"
            android:text="4.00M"
            android:textColor="#777777"
            android:textSize="14dip" >
        </TextView>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="0dip" >

            <View
                android:id="@+id/starView1"
                android:layout_width="11dip"
                android:layout_height="11dip"
                android:background="@drawable/star02"
                android:layout_marginRight="2dip" />

            <View
                android:id="@+id/starView2"
                android:layout_width="11dip"
                android:layout_height="11dip"
                android:background="@drawable/star02"
                android:layout_marginRight="2dip" />
            <View
                android:id="@+id/starView3"
                android:layout_width="11dip"
                android:layout_height="11dip"
                android:background="@drawable/star02"
                android:layout_marginRight="2dip" />
            <View
                android:id="@+id/starView4"
                android:layout_width="11dip"
                android:layout_height="11dip"
                android:background="@drawable/star02"
                android:layout_marginRight="2dip" />
            <View
                android:id="@+id/starView5"
                android:layout_width="11dip"
                android:layout_height="11dip"
                android:background="@drawable/star02"
                android:layout_marginRight="2dip" />
           
        </LinearLayout>

       
    </LinearLayout>

    

        <Button
            android:id="@+id/imageDownloadView"
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_marginTop="24dip"
            android:background="@drawable/load_button"
            android:focusable="true"
            android:text="安装"
            android:textColor="@color/white"
            android:textSize="14sp" >
        </Button>
    
</LinearLayout>